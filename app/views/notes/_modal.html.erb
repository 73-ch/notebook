<div class="modal-dialog">
  <div class="modal-content">
    <div class="embroidery">
    <div class="form">
    <%= form_for(@note, remote: true) do |f|%>
      <% if @type == "plan" %>
        <%= f.hidden_field :note_type , value: "0"%>
      <% elsif @type == "schedule" %>
        <%= f.hidden_field :note_type , value: "1"%>
      <% elsif @type == "routine" %>
        <%= f.hidden_field :note_type , :value => "3"%>
      <% else %>
        <%= f.hidden_field :note_type , :value => "2"%>
      <% end %>
      <%= f.hidden_field :source, :value => @source %>

      <!-- form content -->
      <%= f.text_field :title, {:placeholder => "add #{@type}", :class => "title form_parts"} %>
      <hr>
      <%= f.text_area :content, {:id => "textarea", :class => "textarea form_parts", :placeholder => "content"} %>
      <br>
      <div id="importance_range">
        <%= f.range_field :importance, :class => "range form_parts", :id => "range" %>
      </div>
      <% if @type == "plan" %>
        <%= f.text_field :start_time, data: { :date_format => 'YYYY-MM-DD HH:mm' }, :class => 'form-control datetimepicker form_parts', :id => "start_time", :placeholder => "start time", :value => @date %>
        <%= f.text_field :end_time, data: { :date_format => 'YYYY-MM-DD HH:mm' }, :class => 'form-control datetimepicker form_parts', :id => "end_time", :placeholder => "end time", :value => @date %>
      <% elsif @type == 'schedule' %>
        <% if @date %>
          <%= f.text_field :start_time, data: { :date_format => 'YYYY-MM-DD' }, :class => 'form-control datetimepicker form_parts', :id => "start_time", :placeholder => "start time", :value => @date %>
          <%= f.text_field :end_time, data: { :date_format => 'YYYY-MM-DD' }, :class => 'form-control datetimepicker form_parts', :id => "end_time", :placeholder => "end time", :value => @date %>
        <% else %>
          <%= f.text_field :start_time, data: { :date_format => 'YYYY-MM-DD' }, :class => 'form-control datetimepicker form_parts', :id => "start_time", :placeholder => "start time" %>
          <%= f.text_field :end_time, data: { :date_format => 'YYYY-MM-DD' }, :class => 'form-control datetimepicker form_parts', :id => "end_time", :placeholder => "end time" %>
        <% end %>
      <% elsif @type == 'routine' %>
        <%= f.check_box :routine, :checked_value => "1", :unchecked_value => "0", :class => "routine", :id => "sun" %>
        <%= f.check_box :routine, :checked_value => "1", :unchecked_value => "0", :class => "routine", :id => "mon" %>
        <%= f.check_box :routine, :checked_value => "1", :unchecked_value => "0", :class => "routine", :id => "tue" %>
        <%= f.check_box :routine, :checked_value => "1", :unchecked_value => "0", :class => "routine", :id => "wed" %>
        <%= f.check_box :routine, :checked_value => "1", :unchecked_value => "0", :class => "routine", :id => "thu" %>
        <%= f.check_box :routine, :checked_value => "1", :unchecked_value => "0", :class => "routine", :id => "fly" %>
        <%= f.check_box :routine, :checked_value => "1", :unchecked_value => "0", :class => "routine", :id => "sat" %>
      <% end %>
      <br>
      <%= f.fields_for :processes do |p_f| %>
        <%= p_f.text_field :title, :placeholder => "add process", :class => 'form_parts process', :id => "process" %>
      <% end %>
      <br>
      <%= f.collection_select :category_id, @categories, :id, :name, {:include_blank => "category"}, {:id => "category_select", :class => "category_select form_parts"} %>
      <br>
      <input type="reset" value="reset" class="form_button">
      <%= f.submit "add", :class => "form_button add_button" %>
    <% end %>
    </div>
    </div>
  </div>
</div>
