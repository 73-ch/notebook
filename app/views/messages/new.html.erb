<h1>予定を送る</h1>
<div id="form">
<div id="content">
<%= form_for(@message) do |f|%>
	<%= f.hidden_field :message_type , :value => "0"%>
	送り先
	<br>
	<%= f.collection_select :for_user, @users, :id, :name %>
	<br>
	タイトル
	<br>
	<%= f.text_field :title %>
	<br>
	内容
	<br>
	<%= f.text_area :content %>
	<br>
	重要度
	<br>
	<%= f.range_field :importance %>
	<br>
	期間
	<br>
	<%= f.datetime_select :start_time %>〜
	<%= f.datetime_select :end_time %>
	<br>
	<input type="reset"　value="リセット">
	<%= f.submit "投稿" %>
<% end %>
<input type="button" onClick='history.back();' value="戻る">
</div>
</div>