<h1>プロフィール</h1>
<div id="user">
    <h3>名前</h3>
    <h4><%= @user.name %></h4>
    <h3>メールアドレス</h3>
    <h4><%= @user.email %></h4>
    <h3>カテゴリー数</h3>
    <h4><%= @categories.count %></h4>
    <h4><%= link_to 'カテゴリー一覧', categories_path %></h4>
    <h3>ノート数</h3>
    <h4><%= @notes.count %></h4>
    <h4><%= link_to 'ノート一覧', index_path%></h4>
</div>

<% if current_user?(@user) %>
<p><%= link_to '編集', edit_user_path %></p>
<p><%= link_to '削除', destroy_path(id: @user.id) ,:method => :delete %></p>
<% end %>